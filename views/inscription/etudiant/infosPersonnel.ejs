<div class="col-lg-4 offset-lg-4 col-md-6 offset-md-3 p-5">
    <div ng-controller="ctr1" class="">
        <div class="form-group">
            <label for="nom">Nom</label>
            <input id="nom"
                class="form-control-plaintext monter border border-dark rounded-0 grey-text text-darken-2 white p-3"
                type="text" name="">
        </div>
        <div class="form-group">
            <label for="prenoms">Prenoms</label>
            <input id="prenoms"
                class="form-control-plaintext monter border border-dark rounded-0 grey-text text-darken-2 white p-3"
                type="text" name="">
        </div>
        <div class="form-group">
            <label for="dateNaissance">Date de naissance</label>
            <input id="dateNaissance"
                class="form-control-plaintext monter border border-dark rounded-0 white p-3"
                type="date" name="">
        </div>
        <div class="form-group">
            <label for="classe">Classe</label>
            <input id="classe"
                class="form-control-plaintext monter border border-dark rounded-0 grey-text text-darken-2 white p-3"
                type="text" name="">
        </div>
        <div class="form-group">
            <label for="adresse">Adresse</label>
            <input id="adresse"
                class="form-control-plaintext monter border border-dark rounded-0 grey-text text-darken-2 white p-3"
                type="text" name="" placeholder="Exple : Abidjan, Port-Bouet">
        </div>
        <div class="form-group">
            <label for="mail">Mail</label>
            <input id="mail"
                class="form-control-plaintext monter border border-dark rounded-0 grey-text text-darken-2 white p-3"
                type="text" name="" placeholder="Exple : xxx@yyy.zzz">
        </div>
        <div class="form-group">
            <label for="contact">Contact</label>
            <input id="contact"
                class="form-control-plaintext monter border border-dark rounded-0 grey-text text-darken-2 white p-3"
                type="text" name="" placeholder="Exple : +225 XX XX XX XX">
        </div>
    </div>
</div>